{
  "description": "NodeJS Example of Hexagonal Architecture",
  "author": {
    "name": "Aurore de Amaral"
  },
  "homepage": "https://github.com/auroredea/hexagonal-nodejs",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "reporters": [
      "default"
    ]
  },
  "scripts": {
    "start": "npx tsc && node build/index.js",
    "test": "npx tsc && jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3"
  }
}
